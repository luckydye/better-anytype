{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "ES2022",
    "target": "ES2022",
    "jsx": "react",
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "experimentalDecorators": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": "./src",
    "lib": ["ES2022", "dom"],

    "paths": {
      "json": ["json"],
      "Component/*": [
        "component/*"
      ],
      "Component": [
        "component"
      ],
      "Interface/*": [
        "interface/*"
      ],
      "Interface": [
        "interface"
      ],
      "Docs/*": ["docs/*"],
      "Docs": ["docs"],
      "Lib/*": ["lib/*"],
      "Lib": ["lib"],
      "Model/*": ["model/*"],
      "Model": ["model"],
      "Store/*": ["store/*"],
      "Store": ["store"],
      "dist/*": ["../dist/*"]
    },
    "types": ["vite/client"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules/**/*",
    "dist/**/*"
  ]
}
