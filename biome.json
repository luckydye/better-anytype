{
  "$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "rules": {
      "style": {
        "noDefaultExport": "warn",
        "useExponentiationOperator": "warn"
      },
      "complexity": {
        "noStaticOnlyClass": "warn",
        "noForEach": "warn"
      },
      "a11y": {
        "useKeyWithClickEvents": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noExplicitAny": "warn",
        "noConsoleLog": "error"
      },
      "nursery": {
        "useSortedClasses": {
          "level": "warn",
          "options": {
            "attributes": [
              "classList"
            ],
            "functions": [
              "clsx",
              "cva",
              "twMerge",
              "tw"
            ]
          }
        }
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 4,
    "indentStyle": "tab",
    "formatWithErrors": true,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "all",
      "quoteProperties": "asNeeded",
      "jsxQuoteStyle": "double"
    }
  },
  "css": {
    "formatter": {
      "quoteStyle": "double",
      "indentStyle": "space",
      "indentWidth": 4
    }
  },
  "json": {
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": true
    },
    "formatter": {
      "indentWidth": 2,
      "indentStyle": "space",
      "trailingCommas": "none",
      "lineWidth": 30
    }
  },
  "files": {
    "ignoreUnknown": true,
    "ignore": [
      ".mise",
      ".astro",
      ".nuxt",
      ".output",
      "vendor",
      "public",
      "dist"
    ]
  },
  "overrides": [
    {
      "include": [
        "package.json"
      ],
      "formatter": {
        "indentStyle": "tab",
        "indentWidth": 2
      }
    }
  ]
}
